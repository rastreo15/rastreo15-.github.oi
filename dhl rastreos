    <script>
        function checkTracking() {
            var codigoIngresado = document.getElementById("trackingNumber").value;  
            
            if (codigoIngresado === "DH150724L") {
                document.getElementById("message").innerHTML = "Usuario, tu paquete está siendo procesado. Tranquilo, ya casi está en camino. El paquete con número de folio BES24T y número de orden 2391. Tu información con nosotros está segura.";
            } else {
                document.getElementById("message").innerHTML = "Código de rastreo inválido";
            }
        }
