        function trackPackage() {
            const trackingNumber = document.getElementById('trackingNumber').value;
            if (trackingNumber) {
                alert(`codigo de rastreo valido comenzando rastreo: ${trackingNumber  }`);
                // Redirigir a otro archivo HTML después del mensaje
                window.location.href ='https://rastreo-de-paquete-dhl.netlify.app/'; // Reemplaza con la URL de tu archivo HTML
            } else {
                alert('Por favor, ingrese un número de rastreo.');
            }
        }
    </script><br>
